# SmartStart Backend Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3345
HOST=localhost

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/smartstart.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartstart
DB_USER=smartstart_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm
SIGNATURE_ALGORITHM=sha256

# Document Storage
DOCUMENT_STORAGE_PATH=./data/documents
DOCUMENT_MAX_SIZE=50MB
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt,md

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@alicesolutionsgroup.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3344

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/smartstart.log

# Digital Signature Configuration
SIGNATURE_CERT_PATH=./certs/signature.pem
SIGNATURE_KEY_PATH=./certs/signature.key
SIGNATURE_PASSWORD=your_signature_password

# Timestamp Server Configuration
TSA_URL=https://freetsa.org/tsr
TSA_USERNAME=
TSA_PASSWORD=

# File Upload Configuration
UPLOAD_MAX_SIZE=50MB
UPLOAD_TEMP_DIR=./temp/uploads

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_MAX_AGE=86400000

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
